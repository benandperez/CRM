{% extends 'base.html.twig' %}

{% block title %}StatusUnits index{% endblock %}

{% block body %}
    <h1>StatusUnits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status_unit in status_units %}
            <tr>
                <td>{{ status_unit.id }}</td>
                <td>{{ status_unit.name }}</td>
                <td>{{ status_unit.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_status_units_show', {'id': status_unit.id}) }}">show</a>
                    <a href="{{ path('app_status_units_edit', {'id': status_unit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_status_units_new') }}">Create new</a>
{% endblock %}
